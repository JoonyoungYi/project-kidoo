<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sitter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sitter_profile_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person_sitter_1"
            android:layout_marginRight="16dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:padding="8dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sitter_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_strong"
                    android:textSize="16sp"
                    android:text="안녕하세요~~~ 전 그 때 가능합니다~~~~ 연락주셔서 감사합니다! :)" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_weak"
                    android:textSize="14sp"
                    android:text="방금 전" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right|top"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:padding="8dp"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/parent_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_strong"
                    android:textSize="16sp"
                    android:layout_gravity="right"
                    android:text="그 때 혹시 가능하신가요?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_weak"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right"
                    android:text="방금 전" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/parent_profile_iv"
            android:layout_width="40dp"
            android:layout_marginLeft="8dp"
            android:layout_height="40dp"
            android:src="@drawable/person_sitter_2" />

    </LinearLayout>


</LinearLayout>
