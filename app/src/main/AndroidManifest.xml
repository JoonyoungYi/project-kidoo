<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.clude.yearnning.baby">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Baby">


        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.Baby.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/Theme.Baby.NoActionBar"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".ui.DetailActivity"
            android:label="@string/title_activity_detail" />
        <activity
            android:name=".ui.RecommendActivity"
            android:label="@string/title_activity_recommend" />
        <activity
            android:name=".ui.ContactActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.WriteActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="의견 작성하기" />

    </application>

</manifest>
